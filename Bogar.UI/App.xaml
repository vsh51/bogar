<Application x:Class="Bogar.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          StartupUri="StartWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="White"/>
        <SolidColorBrush x:Key="LightSquareBrush" Color="#FFF8F5"/>
        <SolidColorBrush x:Key="DarkSquareBrush" Color="#808583"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#2E86C1"/>
        <SolidColorBrush x:Key="TextBrush" Color="#222222"/>

        <BitmapImage x:Key="wP" UriSource="pack://application:,,,/Resources/Pieces/wP.png"/>
        <BitmapImage x:Key="wN" UriSource="pack://application:,,,/Resources/Pieces/wN.png"/>
        <BitmapImage x:Key="wB" UriSource="pack://application:,,,/Resources/Pieces/wB.png"/>
        <BitmapImage x:Key="wR" UriSource="pack://application:,,,/Resources/Pieces/wR.png"/>
        <BitmapImage x:Key="wQ" UriSource="pack://application:,,,/Resources/Pieces/wQ.png"/>
        <BitmapImage x:Key="wK" UriSource="pack://application:,,,/Resources/Pieces/wK.png"/>

        <BitmapImage x:Key="bP" UriSource="pack://application:,,,/Resources/Pieces/bP.png"/>
        <BitmapImage x:Key="bN" UriSource="pack://application:,,,/Resources/Pieces/bN.png"/>
        <BitmapImage x:Key="bB" UriSource="pack://application:,,,/Resources/Pieces/bB.png"/>
        <BitmapImage x:Key="bR" UriSource="pack://application:,,,/Resources/Pieces/bR.png"/>
        <BitmapImage x:Key="bQ" UriSource="pack://application:,,,/Resources/Pieces/bQ.png"/>
        <BitmapImage x:Key="bK" UriSource="pack://application:,,,/Resources/Pieces/bK.png"/>


        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Background" Value="{DynamicResource DarkSquareBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource WindowBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource DarkSquareBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                           BorderBrush="{TemplateBinding BorderBrush}"
                           BorderThickness="{TemplateBinding BorderThickness}"
                           CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="20,0,20,10"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="White"
                        BorderBrush="{DynamicResource DarkSquareBrush}"
                        BorderThickness="1"
                        CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Application.Resources>
</Application>
