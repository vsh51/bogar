<Window x:Class="Bogar.UI.BotSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bogar.UI"
        mc:Ignorable="d"
        Title="Select Bots" 
        Height="300" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Content="White Bot:" FontWeight="Bold" FontSize="14"/>
            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="WhiteBotTextBox" 
                         IsReadOnly="True" 
                         VerticalContentAlignment="Center"
                         Padding="5"
                         Text="No bot selected"/>
                <Button Grid.Column="1" 
                        Content="Browse..." 
                        Width="80" 
                        Margin="10,0,0,0"
                        Click="BrowseWhiteBot_Click"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <Label Content="Black Bot:" FontWeight="Bold" FontSize="14"/>
            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="BlackBotTextBox" 
                         IsReadOnly="True" 
                         VerticalContentAlignment="Center"
                         Padding="5"
                         Text="No bot selected"/>
                <Button Grid.Column="1" 
                        Content="Browse..." 
                        Width="80" 
                        Margin="10,0,0,0"
                        Click="BrowseBlackBot_Click"/>
            </Grid>
        </StackPanel>

        <TextBlock x:Name="ValidationMessage" 
                   Grid.Row="4"
                   Foreground="Red"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"/>

        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Width="80" 
                    Height="30"
                    Click="Cancel_Click"
                    Margin="0,0,10,0"/>
            <Button x:Name="StartButton"
                    Content="Start Game" 
                    Width="100" 
                    Height="30"
                    Click="StartGame_Click"
                    IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
