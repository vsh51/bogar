<Window x:Class="Bogar.UI.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bogar.UI"
        mc:Ignorable="d"
        Title="Start"
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Window.Resources>

    </Window.Resources>

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button x:Name="LocalGameButton"
                Content="Local Game"
                Style="{StaticResource PrimaryButton}"
                Click="LocalGameButton_Click"/>

        <Button x:Name="ConnectServerButton"
                Content="Join Lobby"
                Style="{StaticResource PrimaryButton}"
                Click="ConnectServerButton_Click"/>

        <Button x:Name="CreateLobbyButton"
                Content="Create Lobby"
                Style="{StaticResource PrimaryButton}"
                Click="CreateLobbyButton_Click"/>
    </StackPanel>
</Window>
