<Window x:Class="Bogar.UI.AdminStatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bogar.UI"
        mc:Ignorable="d"
        Title="AdminStatisticsWindow" 
        Height="900" Width="1500"
        MinWidth="900" MinHeight="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#229954"/>
        <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#1E8449"/>
        <SolidColorBrush x:Key="TextBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextLightBrush" Color="#95A5A6"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#BDC3C7"/>
        <SolidColorBrush x:Key="CardBackground" Color="#F8F9F9"/>
        <Style TargetType="TextBlock" x:Key="HeaderTitle">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12,20,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryPressedBrush}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E8449"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="WindowControlCloseButton" TargetType="Button" BasedOn="{StaticResource WindowControlButton}">
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E74C3C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border Background="{DynamicResource WindowBackgroundBrush}" CornerRadius="12" Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.2" Color="#2C3E50"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="20,0,20,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                        
                        <TextBlock Text="♕" FontSize="22" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock x:Name="HeaderTitleText" Text="ADMIN STATISTICS" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Margin="0,0,12,0">
                        <Button Style="{StaticResource WindowControlButton}" Click="Minimize_Click" ToolTip="Minimize">
                            <TextBlock Text="&#xE921;" FontFamily="Segoe MDL2 Assets"/>
                        </Button>
                        <Button Style="{StaticResource WindowControlButton}" Click="Maximize_Click" ToolTip="Maximize">
                            <TextBlock Text="&#xE922;" FontFamily="Segoe MDL2 Assets"/>
                        </Button>
                        <Button Style="{StaticResource WindowControlCloseButton}" Click="Close_Click" ToolTip="Close">
                            <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="0,24,0,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- History Header -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,0,0,0">
                    <TextBlock x:Name="StatsTitleText" Text="Match Statistics" FontSize="26" FontWeight="Bold" Style="{StaticResource HeaderTitle}" Margin="0,0,16,0"/>
                    <Button x:Name="RefreshButton"
                            Content="Refresh"
                            Style="{StaticResource PrimaryButton}"
                            Padding="16,8"
                            Height="40"
                            Click="RefreshButton_Click"/>
                    <TextBlock x:Name="LoadingIndicator"
                               Text="Loading..."
                               FontSize="14"
                               Foreground="{StaticResource TextLightBrush}"
                               Margin="16,12,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>

                <!-- Match History Table -->
                <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource CardBackground}" CornerRadius="10" Padding="24" Margin="0,24,0,0">
                    <DataGrid x:Name="MatchesDataGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              RowHeight="32"
                              FontSize="15"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              SelectionMode="Single"
                              SelectionChanged="MatchesDataGrid_SelectionChanged"
                              Background="{StaticResource CardBackground}">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="ContextMenu">
                                    <Setter.Value>
                                        <ContextMenu>
                                            <MenuItem Header="Delete match"
                                                      Command="{x:Static local:AdminStatisticsWindow.DeleteMatchCommand}"
                                                      CommandParameter="{Binding}"/>
                                        </ContextMenu>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="White Bot" Binding="{Binding WhiteBotName}" Width="2*"/>
                            <DataGridTextColumn Header="Black Bot" Binding="{Binding BlackBotName}" Width="2*"/>
                            <DataGridTextColumn Header="Winner" Binding="{Binding WinnerName}" Width="2*"/>
                            <DataGridTextColumn Header="Duration" Binding="{Binding DurationDisplay}" Width="*"/>
                            <DataGridTextColumn Header="White Score" Binding="{Binding ScoreWhite}" Width="*"/>
                            <DataGridTextColumn Header="Black Score" Binding="{Binding ScoreBlack}" Width="*"/>
                            <DataGridTextColumn Header="Moves" Binding="{Binding MovesPreview}" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- Right Column Content -->
                <ScrollViewer Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Margin="0,0,20,0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Border Background="{StaticResource CardBackground}" CornerRadius="10" Padding="24" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Match Details" FontSize="20" FontWeight="Bold" Style="{StaticResource HeaderTitle}" Margin="0,0,0,12"/>
                            <TextBlock x:Name="MatchDetailsEmptyText"
                                       Text="Select a match from the table to inspect its statistics."
                                       FontSize="14"
                                       Foreground="{StaticResource TextLightBrush}"
                                       TextWrapping="Wrap"/>
                            <StackPanel x:Name="MatchDetailsPanel" Visibility="Collapsed">
                                <TextBlock x:Name="MatchPlayersText" FontSize="16" FontWeight="Bold" Margin="0,0,0,6"/>
                                <TextBlock x:Name="MatchWinnerText" FontSize="14" Margin="0,0,0,4"/>
                                <TextBlock x:Name="MatchScoreText" FontSize="14" Margin="0,0,0,4"/>
                                <TextBlock x:Name="MatchDurationText" FontSize="14" Margin="0,0,0,4"/>
                                <TextBlock x:Name="MatchStartedText" FontSize="14" Margin="0,0,0,4"/>
                                <TextBlock x:Name="MatchFinishedText" FontSize="14" Margin="0,0,0,12"/>
                                <TextBlock Text="Moves" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                <ListBox x:Name="MatchMovesList"
                                         Height="180"
                                         BorderBrush="{StaticResource BorderBrush}"
                                         BorderThickness="1"
                                         Background="{StaticResource CardBackground}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontSize="13" Margin="2,1"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </StackPanel>
                        </Border>

                        <Border Background="{StaticResource CardBackground}" CornerRadius="10" Padding="24" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Lobby Overview" FontSize="20" FontWeight="Bold" Style="{StaticResource HeaderTitle}" Margin="0,0,0,12"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Total matches" FontSize="14" Grid.Row="0" Grid.Column="0" Foreground="{StaticResource TextLightBrush}"/>
                                <TextBlock x:Name="TotalMatchesValue" Text="0" FontSize="16" FontWeight="Bold" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right"/>
                                <TextBlock Text="Draws" FontSize="14" Grid.Row="1" Grid.Column="0" Foreground="{StaticResource TextLightBrush}"/>
                                <TextBlock x:Name="DrawsValue" Text="0" FontSize="16" FontWeight="Bold" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right"/>
                                <TextBlock Text="Avg. duration" FontSize="14" Grid.Row="2" Grid.Column="0" Foreground="{StaticResource TextLightBrush}"/>
                                <TextBlock x:Name="AverageDurationValue" Text="0 s" FontSize="16" FontWeight="Bold" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right"/>
                                <TextBlock Text="Top performer" FontSize="14" Grid.Row="3" Grid.Column="0" Foreground="{StaticResource TextLightBrush}"/>
                                <TextBlock x:Name="TopPerformerValue" Text="—" FontSize="16" FontWeight="Bold" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right"/>
                            </Grid>
                            <TextBlock Text="Player standings" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"/>
                            <TextBlock x:Name="StandingsEmptyText"
                                       Text="Play a match to see lobby statistics."
                                       FontSize="14"
                                       Foreground="{StaticResource TextLightBrush}"
                                       Visibility="Collapsed"/>
                                <ListView x:Name="PlayerStandingsList"
                                      Height="220"
                                      Margin="0,6,0,0"
                                      BorderBrush="{StaticResource BorderBrush}"
                                      BorderThickness="1"
                                      Background="{StaticResource CardBackground}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Bot" DisplayMemberBinding="{Binding BotName}" Width="120"/>
                                        <GridViewColumn Header="Matches" DisplayMemberBinding="{Binding MatchesPlayed}" Width="70"/>
                                        <GridViewColumn Header="Wins" DisplayMemberBinding="{Binding Wins}" Width="60"/>
                                        <GridViewColumn Header="Draws" DisplayMemberBinding="{Binding Draws}" Width="60"/>
                                        <GridViewColumn Header="Losses" DisplayMemberBinding="{Binding Losses}" Width="60"/>
                                        <GridViewColumn Header="Avg. Score" DisplayMemberBinding="{Binding AverageScoreDisplay}" Width="80"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>
