<Window x:Class="Bogar.UI.AdminMatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bogar.UI"
        mc:Ignorable="d"
        Title="Admin Match"
        Height="900" Width="1500"
        MinWidth="900" MinHeight="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#229954"/>
        <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#1E8449"/>
        <SolidColorBrush x:Key="TextBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextLightBrush" Color="#95A5A6"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#BDC3C7"/>
        <SolidColorBrush x:Key="CardBackground" Color="#F8F9F9"/>
        <Style TargetType="TextBlock" x:Key="HeaderTitle">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12,20,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryPressedBrush}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Border Background="{DynamicResource WindowBackgroundBrush}" CornerRadius="12" Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.2" Color="#2C3E50"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="20,0,20,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0">
                        <Button x:Name="BackButton"
                            Content="&lt;-"
                            Style="{StaticResource WindowControlButton}"
                            Margin="0,0,12,0"
                            Click="BackButton_Click"/>  
                        <TextBlock Text="♕" FontSize="22" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="ADMIN MATCH" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1">
                        <Button Content="—" Style="{StaticResource WindowControlButton}" Margin="0,0,8,0" Click="Minimize_Click"/>
                        <Button Content="□" Style="{StaticResource WindowControlButton}" Margin="0,0,8,0" Click="Maximize_Click"/>
                        <Button Content="✕" Style="{StaticResource WindowControlButton}" Click="Close_Click"/>
                    </StackPanel>
                </Grid>

            </Border>

            <Grid Grid.Row="1" Margin="0,24,0,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="380"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Margin="0,0,32,0">
                    <TextBlock x:Name="GameTimerText" Text="00:00.000" FontSize="26" FontWeight="Bold" HorizontalAlignment="Right" Style="{StaticResource HeaderTitle}"/>
                    <TextBlock x:Name="WinnerTextBlock" Text="" FontSize="16" Foreground="{StaticResource TextLightBrush}" HorizontalAlignment="Right" Margin="0,6,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Margin="0,10,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="PLAYER 1" FontSize="30" FontWeight="Bold" Margin="0,0,50,0" Style="{StaticResource HeaderTitle}"/>
                            <TextBlock x:Name="WhiteBotNameTextBlock" Text="Player" FontSize="15" HorizontalAlignment="Center" Margin="0,0,50,0" Foreground="Black"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Name="TurnArrow" Text="→" FontSize="30" FontWeight="ExtraBold" Margin="0,-5,0,-5" HorizontalAlignment="Center" Style="{StaticResource HeaderTitle}"/>
                            <TextBlock x:Name="TurnInfoText" Text="0" FontSize="26" FontWeight="Bold" Margin="0,-5,0,-5" HorizontalAlignment="Center" Style="{StaticResource HeaderTitle}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="PLAYER 2" FontSize="30" FontWeight="Bold" Margin="50,0,0,0" Style="{StaticResource HeaderTitle}"/>
                            <TextBlock x:Name="BlackBotNameTextBlock" Text="Player" FontSize="15" HorizontalAlignment="Center" Margin="50,0,0,0" Foreground="Black"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <Grid Grid.Row="2" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Width="80" Height="480" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>
                        <Rectangle Grid.Row="0" Fill="{DynamicResource LightSquareBrush}"/>
                        <Rectangle Grid.Row="1" Fill="{DynamicResource DarkSquareBrush}"/>
                        <Rectangle Grid.Row="2" Fill="{DynamicResource LightSquareBrush}"/>
                        <Rectangle Grid.Row="3" Fill="{DynamicResource DarkSquareBrush}"/>
                        <Rectangle Grid.Row="4" Fill="{DynamicResource LightSquareBrush}"/>
                        <Rectangle Grid.Row="5" Fill="{DynamicResource DarkSquareBrush}"/>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource bP}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="LeftPawnCount" Text="x8" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource bN}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="LeftKnightCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource bB}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="LeftBishopCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource bR}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="LeftRookCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource bQ}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="LeftQueenCount" Text="x1" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource bK}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="LeftKingCount" Text="x1" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </Grid>

                    <ItemsControl x:Name="LeftMovesList" Grid.Column="1" Margin="0,0,20,0" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="12" HorizontalAlignment="Right" Foreground="{StaticResource TextBrush}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Grid Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="800" MaxHeight="800">
                            <Border Padding="8" Background="Transparent">
                                <UniformGrid x:Name="ChessUniformGrid" Rows="8" Columns="8" Width="700" Height="700"/>
                            </Border>
                        </Viewbox>
                    </Grid>

                    <ItemsControl x:Name="RightMovesList" Grid.Column="3" Margin="20,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="12" HorizontalAlignment="Left" Foreground="{StaticResource TextBrush}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Grid Grid.Column="4" Width="80" Height="480" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>
                        <Rectangle Grid.Row="0" Fill="{DynamicResource DarkSquareBrush}"/>
                        <Rectangle Grid.Row="1" Fill="{DynamicResource LightSquareBrush}"/>
                        <Rectangle Grid.Row="2" Fill="{DynamicResource DarkSquareBrush}"/>
                        <Rectangle Grid.Row="3" Fill="{DynamicResource LightSquareBrush}"/>
                        <Rectangle Grid.Row="4" Fill="{DynamicResource DarkSquareBrush}"/>
                        <Rectangle Grid.Row="5" Fill="{DynamicResource LightSquareBrush}"/>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource wP}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="RightPawnCount" Text="x8" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource wN}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="RightKnightCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource wB}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="RightBishopCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource wR}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="RightRookCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource wQ}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="RightQueenCount" Text="x1" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource wK}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="RightKingCount" Text="x1" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="4" HorizontalAlignment="Left" Width="2" Background="{StaticResource BorderBrush}"/>

                <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Background="White" CornerRadius="10" Margin="24,0,0,0" Padding="28">
                    <StackPanel>
                        <TextBlock x:Name="LobbyNameText" Text="Lobby:" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
                        <TextBlock x:Name="LobbyIpText" Text="IP:" FontSize="16" Foreground="{StaticResource TextLightBrush}" Margin="0,0,0,16"/>
                        <TextBlock Text="Players waiting for next match:" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
                        <ListBox x:Name="WaitingPlayersList"
                                 Height="260"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 BorderThickness="2"
                                 Background="{StaticResource CardBackground}"
                                 SelectionMode="Extended"
                                 SelectionChanged="WaitingPlayersList_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Nickname}" FontSize="14" Margin="4,2"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <TextBlock x:Name="WaitingPlayersEmptyText" Text="No idle players" FontSize="13" FontStyle="Italic" Foreground="{StaticResource TextLightBrush}" Margin="0,6,0,0" Visibility="Collapsed"/>
                        <TextBlock Text="Select two idle players. The first selected player will play as White." FontSize="12" Foreground="{StaticResource TextLightBrush}" Margin="0,12,0,12" TextWrapping="Wrap"/>
                        <Button x:Name="StartNextMatchButton"
                                Content="Start Next Match"
                                Style="{StaticResource PrimaryButton}"
                                Width="260"
                                Height="48"
                                HorizontalAlignment="Left"
                                IsEnabled="False"
                                Click="StartNextMatch_Click"/>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left" Margin="48,12,0,0">
                    <Button Content="View Lobby Statistics"
                            Style="{StaticResource PrimaryButton}"
                            Width="260"
                            Height="48"
                            Margin="0,0,0,16"
                            HorizontalAlignment="Left"
                            Click="ViewStatistics_Click"/>
                    <Button x:Name="LeaveLobbyButton"
                            Content="Leave Lobby"
                            Style="{StaticResource PrimaryButton}"
                            Width="260"
                            Height="48"
                            HorizontalAlignment="Left"
                            Click="LeaveLobby_Click"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                    <Button x:Name="StopMatchButton"
                            Content="Stop Match"
                            Style="{StaticResource PrimaryButton}"
                            Width="180"
                            Height="48"
                            Margin="0,0,24,0"
                            IsEnabled="False"
                            Click="StopMatch_Click"/>
                    <Button x:Name="ResumeMatchButton"
                            Content="Resume Match"
                            Style="{StaticResource PrimaryButton}"
                            Width="180"
                            Height="48"
                            IsEnabled="False"
                            Click="ResumeMatch_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
