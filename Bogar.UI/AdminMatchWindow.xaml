<Window x:Class="Bogar.UI.AdminMatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bogar.UI"
        mc:Ignorable="d"
        Title="Admin Match"
        Height="900" Width="1500"
        WindowStartupLocation="CenterScreen"
        MinWidth="900" MinHeight="600"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#229954"/>
        <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#1E8449"/>
        <SolidColorBrush x:Key="TextBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextLightBrush" Color="#95A5A6"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#BDC3C7"/>
        <Style TargetType="TextBlock" x:Key="HeaderTitle">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12,20,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryPressedBrush}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- Green header, not rounded -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="{StaticResource PrimaryBrush}" CornerRadius="0">
            <Grid Height="50">
                <StackPanel Orientation="Horizontal" Margin="20,0,20,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="♕" FontSize="22" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="ADMIN MATCH" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Timer top right above board -->
        <Grid Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Margin="0,10,40,0">
            <TextBlock x:Name="GameTimerText" Text="00:00:00" FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0" Style="{StaticResource HeaderTitle}"/>
        </Grid>

        <!-- Player panel above board, centered -->
        <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Margin="0,20,0,30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="PLAYER 1" FontSize="30" FontWeight="Bold" Margin="0,0,50,0" Style="{StaticResource HeaderTitle}"/>
                    <TextBlock x:Name="WhiteBotNameTextBlock" Text="Ivan Petrenko" FontSize="15" HorizontalAlignment="Center" Margin="0,0,50,0" Foreground="Black"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="TurnArrow" Text="→" FontSize="30" FontWeight="ExtraBold" Margin="0,-5,0,-5" HorizontalAlignment="Center" Style="{StaticResource HeaderTitle}"/>
                    <TextBlock x:Name="TurnInfoText" Text="1" FontSize="26" FontWeight="Bold" Margin="0,-5,0,-5" HorizontalAlignment="Center" Style="{StaticResource HeaderTitle}"/>
                </StackPanel>
                <StackPanel Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="PLAYER 2" FontSize="30" FontWeight="Bold" Margin="50,0,0,0" Style="{StaticResource HeaderTitle}"/>
                    <TextBlock x:Name="BlackBotNameTextBlock" Text="Olena Shevchenko" FontSize="15" HorizontalAlignment="Center" Margin="50,0,0,0" Foreground="Black"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Main chessboard and side panels -->
        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- Left side panel (pieces) -->
            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20,0,0,0">
                <Grid Width="80" Height="480" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>
                    <Rectangle Grid.Row="0" Fill="{DynamicResource LightSquareBrush}"/>
                    <Rectangle Grid.Row="1" Fill="{DynamicResource DarkSquareBrush}"/>
                    <Rectangle Grid.Row="2" Fill="{DynamicResource LightSquareBrush}"/>
                    <Rectangle Grid.Row="3" Fill="{DynamicResource DarkSquareBrush}"/>
                    <Rectangle Grid.Row="4" Fill="{DynamicResource LightSquareBrush}"/>
                    <Rectangle Grid.Row="5" Fill="{DynamicResource DarkSquareBrush}"/>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{StaticResource bP}" Width="56" Height="56" Margin="0,0,8,0"/>
                        <TextBlock x:Name="LeftPawnCount" Text="x8" FontSize="16" VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{StaticResource bK}" Width="56" Height="56" Margin="0,0,8,0"/>
                        <TextBlock x:Name="LeftKnightCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{StaticResource bB}" Width="56" Height="56" Margin="0,0,8,0"/>
                        <TextBlock x:Name="LeftBishopCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{StaticResource bR}" Width="56" Height="56" Margin="0,0,8,0"/>
                        <TextBlock x:Name="LeftRookCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{StaticResource bQ}" Width="56" Height="56" Margin="0,0,8,0"/>
                        <TextBlock x:Name="LeftQueenCount" Text="x1" FontSize="16" VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{StaticResource bK}" Width="56" Height="56" Margin="0,0,8,0"/>
                        <TextBlock x:Name="LeftKingCount" Text="x1" FontSize="16" VerticalAlignment="Bottom"/>
                    </StackPanel>
                </Grid>
            </Grid>
            <!-- Chessboard -->
            <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="800" MaxHeight="800">
                    <Border Padding="8" Background="Transparent">
                        <UniformGrid x:Name="ChessUniformGrid" Rows="8" Columns="8" Width="700" Height="700"/>
                    </Border>
                </Viewbox>
            </Grid>
            <!-- Right side panel (pieces) -->
            <Grid Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,20,0">
                <Grid Width="80" Height="480" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>
                    <Rectangle Grid.Row="0" Fill="{DynamicResource DarkSquareBrush}"/>
                    <Rectangle Grid.Row="1" Fill="{DynamicResource LightSquareBrush}"/>
                    <Rectangle Grid.Row="2" Fill="{DynamicResource DarkSquareBrush}"/>
                    <Rectangle Grid.Row="3" Fill="{DynamicResource LightSquareBrush}"/>
                    <Rectangle Grid.Row="4" Fill="{DynamicResource DarkSquareBrush}"/>
                    <Rectangle Grid.Row="5" Fill="{DynamicResource LightSquareBrush}"/>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{StaticResource wP}" Width="56" Height="56" Margin="0,0,8,0"/>
                        <TextBlock x:Name="RightPawnCount" Text="x8" FontSize="16" VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{StaticResource wK}" Width="56" Height="56" Margin="0,0,8,0"/>
                        <TextBlock x:Name="RightKnightCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{StaticResource wB}" Width="56" Height="56" Margin="0,0,8,0"/>
                        <TextBlock x:Name="RightBishopCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{StaticResource wR}" Width="56" Height="56" Margin="0,0,8,0"/>
                        <TextBlock x:Name="RightRookCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{StaticResource wQ}" Width="56" Height="56" Margin="0,0,8,0"/>
                        <TextBlock x:Name="RightQueenCount" Text="x1" FontSize="16" VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{StaticResource wK}" Width="56" Height="56" Margin="0,0,8,0"/>
                        <TextBlock x:Name="RightKingCount" Text="x1" FontSize="16" VerticalAlignment="Bottom"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <!-- Vertical separator between main and right panel -->
        <Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" HorizontalAlignment="Left" Width="2" Background="{StaticResource BorderBrush}" Margin="0,0,0,0"/>

        <!-- Right panel: lobby info, players, start button -->
        <Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Background="White" CornerRadius="10" Margin="32,32,32,32" Padding="32">
            <StackPanel>
                <TextBlock Text="Lobby: ChessRoom42" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,6"/>
                <TextBlock Text="IP: 192.168.1.100" FontSize="16" Foreground="{StaticResource TextLightBrush}" Margin="0,0,0,16"/>
                <TextBlock Text="Players waiting for next match:" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>
                <ItemsControl Margin="0,0,0,24">
                    <ItemsControl.Items>
                        <TextBlock Text="• Ivan Petrenko" FontSize="15" Foreground="{StaticResource TextBrush}" Margin="0,2"/>
                        <TextBlock Text="• Olena Shevchenko" FontSize="15" Foreground="{StaticResource TextBrush}" Margin="0,2"/>
                        <TextBlock Text="• John Doe" FontSize="15" Foreground="{StaticResource TextBrush}" Margin="0,2"/>
                    </ItemsControl.Items>
                </ItemsControl>
                <Button Content="Start Next Match"
                    Style="{StaticResource PrimaryButton}"
                    Width="260"
                    Height="48"
                    Margin="0,0,0,32"
                    HorizontalAlignment="Left"
                    Click="StartNextMatch_Click"/>
            </StackPanel>
        </Border>

        <!-- Right panel bottom: statistics and leave lobby buttons -->
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left" Margin="64,0,0,32">
            <Button Content="View Lobby Statistics"
                    Style="{StaticResource PrimaryButton}"
                    Width="260"
                    Height="48"
                    Margin="0,0,0,16"
                    HorizontalAlignment="Left"
                    Click="ViewStatistics_Click"/>
            <Button x:Name="LeaveLobbyButton"
                    Content="Leave Lobby"
                    Style="{StaticResource PrimaryButton}"
                    Width="260"
                    Height="48"
                    HorizontalAlignment="Left"
                    Click="LeaveLobby_Click"/>
        </StackPanel>

        <!-- Stop/Resume Match buttons below chessboard, centered -->
        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
            <Button x:Name="StopMatchButton"
                    Content="Stop Match"
                    Style="{StaticResource PrimaryButton}"
                    Width="180"
                    Height="48"
                    Margin="0,0,24,0"
                    Click="StopMatch_Click"/>
            <Button x:Name="ResumeMatchButton"
                    Content="Resume Match"
                    Style="{StaticResource PrimaryButton}"
                    Width="180"
                    Height="48"
                    IsEnabled="False"
                    Click="ResumeMatch_Click"/>
        </StackPanel>
    </Grid>
</Window>
