<Window x:Class="Bogar.UI.AdminWaitingRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bogar.UI"
        mc:Ignorable="d"
        Title="Admin Waiting Room"
        Height="650"
        Width="560"
        MinHeight="560"
        MinWidth="480"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#229954"/>
        <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#1E8449"/>
        <SolidColorBrush x:Key="TextBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextLightBrush" Color="#95A5A6"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#BDC3C7"/>
        <SolidColorBrush x:Key="CardBackground" Color="#F8F9F9"/>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12,20,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryPressedBrush}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="0"/>
            <!-- Only vertical centering, no extra space -->
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>



    </Window.Resources>
    <Grid MouseLeftButtonDown="Window_MouseLeftButtonDown">
        <Border Background="{StaticResource CardBackground}" CornerRadius="10" Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.2" Color="#2C3E50"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="10,10,0,0">
                    <Grid Height="50">
                        <StackPanel Orientation="Horizontal" Margin="20,0,20,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="♕" FontSize="22" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="ADMIN WAITING ROOM" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Grid Grid.Row="1" Margin="0,24,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Lobby info -->
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,12">
                        <TextBlock x:Name="LobbyNameText" Text="Lobby: ChessRoom42" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,4" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="LobbyIpText" Text="IP: 192.168.1.100" FontSize="15" Foreground="{StaticResource TextLightBrush}" Margin="0,0,0,4" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="LobbyPortText" Text="Port: 8080" FontSize="15" Foreground="{StaticResource TextLightBrush}" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Connected clients -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,12" HorizontalAlignment="Center">
                        <TextBlock Text="Connected Clients:" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,6" HorizontalAlignment="Center"/>
                        <ListBox x:Name="ClientsListBox"
                                 Width="400"
                                 Height="120"
                                 Background="White"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 BorderThickness="2"
                                 SelectionMode="Extended"
                                 DisplayMemberPath="DisplayText"
                                 SelectionChanged="ClientsListBox_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="8,4"/>
                                    <Setter Property="FontSize" Value="13"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                        <TextBlock x:Name="NoClientsText"
                                   Text="No clients connected"
                                   Foreground="{StaticResource TextLightBrush}"
                                   FontStyle="Italic"
                                   Margin="0,6,0,0"
                                   HorizontalAlignment="Center"
                                   Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Logs -->
                    <StackPanel Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <TextBlock Text="Server Logs:" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                        <ListBox x:Name="LogListBox"
                                 Width="400"
                                 Height="150"
                                 Background="White"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 BorderThickness="2"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="4,2"/>
                                    <Setter Property="FontSize" Value="12"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </StackPanel>

                    <!-- Actions -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,18,0,0">
                        <Button x:Name="StartMatchButton"
                                Content="Start Match"
                                Style="{StaticResource PrimaryButton}"
                                Width="140"
                                Height="42"
                                Margin="0,0,12,0"
                                IsEnabled="False"
                                Click="StartMatchButton_Click"/>
                        <Button Content="Delete Lobby"
                                Style="{StaticResource SecondaryButton}"
                                Width="140"
                                Height="42"
                                Click="DeleteLobby_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
