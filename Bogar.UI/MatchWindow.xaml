<Window x:Class="Bogar.UI.MatchWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Match"
    Height="900" Width="1358"
    MinWidth="900" MinHeight="600"
    WindowStyle="None"
    WindowStartupLocation="CenterScreen"
    AllowsTransparency="True"
    Background="Transparent">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#229954"/>
        <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#1E8449"/>
        <SolidColorBrush x:Key="TextBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextLightBrush" Color="#95A5A6"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#BDC3C7"/>
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
        <Style TargetType="TextBlock" x:Key="HeaderTitle">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12,20,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryPressedBrush}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Border Background="{DynamicResource WindowBackgroundBrush}" CornerRadius="12" Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.2" Color="#2C3E50"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="20,0,20,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0">
                        <Button x:Name="BackButton"
                            Content="&lt;-"
                            Style="{StaticResource WindowControlButton}"
                            Margin="0,0,12,0"
                            Click="BackButton_Click"/>
                        <TextBlock Text="♕" FontSize="22" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="OFFLINE MATCH" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1">
                        <Button Content="—" Style="{StaticResource WindowControlButton}" Margin="0,0,8,0" Click="Minimize_Click"/>
                        <Button Content="□" Style="{StaticResource WindowControlButton}" Margin="0,0,8,0" Click="Maximize_Click"/>
                        <Button Content="✕" Style="{StaticResource WindowControlButton}" Click="Close_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="32,8,32,32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="WinnerTextBlock"
                               Grid.Column="0"
                               Text=""
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextLightBrush}"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="GameTimerText" Text="00:00.000" FontSize="24" FontWeight="Bold"
                               Grid.Column="1"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               Style="{StaticResource HeaderTitle}"/>
                </Grid>

                <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,8,0,8" Height="85">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="PLAYER 1" FontSize="30" FontWeight="Bold" Margin="0,0,50,0" Style="{StaticResource HeaderTitle}"/>
                            <TextBlock x:Name="WhiteBotNameTextBlock" Text="Ivan Petrenko" FontSize="15" HorizontalAlignment="Center" Margin="0,0,50,0" Foreground="Black"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Name="TurnArrow" Text="→" FontSize="30" FontWeight="ExtraBold" Margin="0,-5,0,-5" HorizontalAlignment="Center" Style="{StaticResource HeaderTitle}"/>
                            <TextBlock x:Name="TurnInfoText" Text="1" FontSize="26" FontWeight="Bold" Margin="0,-5,0,-5" HorizontalAlignment="Center" Style="{StaticResource HeaderTitle}"/>
                            <TextBlock x:Name="ScoreText" Text="Score: 0" FontSize="18" FontWeight="SemiBold" Margin="0,5,0,0" HorizontalAlignment="Center" Foreground="{StaticResource TextBrush}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="PLAYER 2" FontSize="30" FontWeight="Bold" Margin="50,0,0,0" Style="{StaticResource HeaderTitle}"/>
                            <TextBlock x:Name="BlackBotNameTextBlock" Text="Olena Shevchenko" FontSize="15" HorizontalAlignment="Center" Margin="50,0,0,0" Foreground="Black"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <Grid Grid.Row="2" Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Width="80" Height="480" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>
                        <Rectangle Grid.Row="0" Fill="{DynamicResource LightSquareBrush}"/>
                        <Rectangle Grid.Row="1" Fill="{DynamicResource DarkSquareBrush}"/>
                        <Rectangle Grid.Row="2" Fill="{DynamicResource LightSquareBrush}"/>
                        <Rectangle Grid.Row="3" Fill="{DynamicResource DarkSquareBrush}"/>
                        <Rectangle Grid.Row="4" Fill="{DynamicResource LightSquareBrush}"/>
                        <Rectangle Grid.Row="5" Fill="{DynamicResource DarkSquareBrush}"/>
                        <StackPanel x:Name="BlackPawnSource" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource bP}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="LeftPawnCount" Text="x8" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel x:Name="BlackKnightSource" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource bN}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="LeftKnightCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel x:Name="BlackBishopSource" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource bB}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="LeftBishopCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel x:Name="BlackRookSource" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource bR}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="LeftRookCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel x:Name="BlackQueenSource" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource bQ}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="LeftQueenCount" Text="x1" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel x:Name="BlackKingSource" Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource bK}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="LeftKingCount" Text="x1" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </Grid>

                    <ItemsControl x:Name="LeftMovesList"
                                  Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="14" HorizontalAlignment="Right" Foreground="{DynamicResource TextBrush}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Grid Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="559" Width="560">
                        <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="800" MaxHeight="800">
                            <Border Padding="8" Background="Transparent">
                                <UniformGrid x:Name="ChessUniformGrid" Rows="8" Columns="8" Width="700" Height="700"/>
                            </Border>
                        </Viewbox>
                    </Grid>

                    <ItemsControl x:Name="RightMovesList"
                                  Grid.Column="3"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="14" HorizontalAlignment="Left" Foreground="{DynamicResource TextBrush}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Grid Grid.Column="4" Width="80" Height="480" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>
                        <Rectangle Grid.Row="0" Fill="{DynamicResource DarkSquareBrush}"/>
                        <Rectangle Grid.Row="1" Fill="{DynamicResource LightSquareBrush}"/>
                        <Rectangle Grid.Row="2" Fill="{DynamicResource DarkSquareBrush}"/>
                        <Rectangle Grid.Row="3" Fill="{DynamicResource LightSquareBrush}"/>
                        <Rectangle Grid.Row="4" Fill="{DynamicResource DarkSquareBrush}"/>
                        <Rectangle Grid.Row="5" Fill="{DynamicResource LightSquareBrush}"/>
                        <StackPanel x:Name="WhitePawnSource" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource wP}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="RightPawnCount" Text="x8" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel x:Name="WhiteKnightSource" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource wN}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="RightKnightCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel x:Name="WhiteBishopSource" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource wB}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="RightBishopCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel x:Name="WhiteRookSource" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource wR}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="RightRookCount" Text="x2" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel x:Name="WhiteQueenSource" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource wQ}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="RightQueenCount" Text="x1" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <StackPanel x:Name="WhiteKingSource" Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{StaticResource wK}" Width="56" Height="56" Margin="0,0,8,0"/>
                            <TextBlock x:Name="RightKingCount" Text="x1" FontSize="16" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Canvas x:Name="AnimationCanvas"
                    Grid.Row="2"
                    IsHitTestVisible="False"
                    Panel.ZIndex="20"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"/>

                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="StartMatchButton"
                            Content="Start Match"
                            Style="{StaticResource PrimaryButton}"
                            Width="180"
                            Height="48"
                        Margin="0,0,12,0"
                            Visibility="Collapsed"
                            Click="StartMatchButton_Click"/>
                    <Button x:Name="StopMatchButton"
                            Content="Stop Match"
                            Style="{StaticResource PrimaryButton}"
                            Width="180"
                            Height="48"
                        Margin="0,0,12,0"
                            Visibility="Collapsed"
                            Click="StopMatchButton_Click"/>
                    <Button x:Name="LeaveMatchButton"
                            Content="Leave Match"
                            Style="{StaticResource PrimaryButton}"
                            Width="180"
                            Height="48"
                            Click="LeaveMatchButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>

